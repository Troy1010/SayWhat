<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#2D882D</item>
        <item name="colorPrimaryVariant">#55AA55</item>
        <item name="colorOnPrimary">@color/colorOnLight</item>
        <item name="colorSecondary">#1B998C</item>
        <item name="colorSecondaryVariant">#5EC2B7</item>
        <item name="colorOnSecondary">@color/colorOnLight</item>
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorBackgroundHighlight">@color/colorBackgroundHighlight</item>
        <item name="colorOnBackground">@color/colorOnDark</item>
        <item name="colorOnError">@color/colorErrorRed</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme.StandardTextView">
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.StandardEditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorOnDark</item>
        <item name="android:textColorHint">@color/colorOnDarkSoft</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/selector_button_background</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="MainButtonStyle.CategoryButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">21sp</item>
        <item name="android:autoSizeMinTextSize">14sp</item>
        <item name="android:text">Category</item>
    </style>

</resources>